<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ListItemTitleStyle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/andika_new_basic</item>
    </style>
    <style name="StoryImageStyle" parent="@style/ImageView.Corner">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="shapeAppearanceOverlay">@style/ImageView.Corner</item>
    </style>
    <style name="StoryTitleStyle" parent="">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/andika_new_basic</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="InfoSubtitleStyle" parent="">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/andika_new_basic</item>
        <item name="android:padding">15dp</item>
    </style>
</resources>